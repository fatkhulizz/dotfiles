#||| Variables |||#
set $mod Mod4
set $alt Mod1

set $left h
set $down j
set $up k
set $right l

set $term alacritty
set $files dolphin
# set $www flatpak run org.mozilla.firefox
set $www firefox
set $lock i3lock --nofork --ignore-empty-password --show-failed-attempts --image=$HOME/Pictures/walls/sunset.png

